@{
    ViewData["Title"] = "Country";
}

@model ViewModelsContainer

<h1>Country Index</h1>

<form asp-controller="Countries" asp-action="CreateCountry" method="post" class="create country">
    <div asp-validation-summary="All" class="error-message"></div>
    <fieldset>
        <legend>Add a country</legend>

        <div class="field">
            <label asp-for="CreateCountry.Name" for="name"></label>
            <input asp-for="CreateCountry.Name" name="name" type="text">
            <span asp-validation-for="CreateCountry.Name"></span>
        </div>

        <input type="submit" name="submit" value="Create" class="submit">
    </fieldset>
</form>

@if (Model.Countries.List.Any())
{
    <div class="container table people">
        <div class="row column-headers">
            <div class="column-header col-xs-3 col-sm-3 col-md-3 col-lg-3">ID</div>
            <div class="column-header col-xs-3 col-sm-3 col-md-3 col-lg-3">Name</div>
            <div class="column-header col-xs-3 col-sm-3 col-md-3 col-lg-3"></div>
        </div>
        @foreach (Country country in Model.Countries.List)
        {
            <partial name="~/Views/Shared/_TableRowCountry.cshtml" model="country" />
        }
    </div>
}
else
{
    <p>List has no items.</p>
}
