@model Person

<div class="row person">
    <div class="column col-xs-3 col-sm-3 col-md-3 col-lg-3">@Model.Name</div>
    <div class="column col-xs-3 col-sm-3 col-md-3 col-lg-3">@Model.Phone</div>
    <div class="column col-xs-3 col-sm-3 col-md-3 col-lg-3">@Model.City.Name</div>
    <div class="column col-xs-3 col-sm-3 col-md-3 col-lg-3">@Views_Shared_Function.GetLanguageString(Model)</div>

    <div class="column col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <a class="edit" asp-controller="People" asp-action="UpdatePerson" asp-route-id="@Model.ID">Edit</a>
        <a class="delete" asp-controller="People" asp-action="DeletePerson" asp-route-id="@Model.ID">Delete</a>
    </div>
</div>
