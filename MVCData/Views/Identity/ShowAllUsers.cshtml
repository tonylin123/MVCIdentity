@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "All Users";
}

<h1>All users</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>First name</th>
            <th>Last name</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                   <td><a asp-action="ShowUserRoles" asp-route-id=@user.Id class="btn btn-primary">Show all roles for user</a></td>
                   <td><a asp-action="DeleteUser" asp-route-id=@user.Id class="btn btn-danger">Delete user</a></td>
             </tr>
        }
    </tbody>
</table>